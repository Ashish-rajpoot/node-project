<%- include ('./header')%>

<!-- Profarma to Create new course -->
<div class="container my-5 ">
    <div class="row">
        <div class="col-lg">
            <h3>Course Details</h3>
            <hr class="w-100">
            <form method="POST" autocomplete="off">
                <div class="row">
                    <div class="col-lg-8">
                        <label>Course Name</label>
                        <input type="text" name="name" value="<%= doc.name%>" required class="form-control">
                    </div>
                    <div class=" col-lg-4">
                        <label for="type">Course Catogery</label>
                        <select class="custom-select form-control" name="type" value="<%= doc.type%>" required>
                            <option selected value="Select one"> Select one</option>
                            <option value="JavaScript">JavaScript</option>
                            <option value="Node.js">Node.js</option>
                            <option value="Angular">Angular</option>
                            <option value="Data Base">Data Base</option>
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <label>Duration(hours)</label>
                        <input type="text" name="duration" class="form-control" value="<%= doc.duration%>" required>
                    </div>
                    <div class="col-lg-4">
                        <label>Language</label>
                        <input type="text" name="language" class="form-control" value="<%= doc.language%>" required>
                    </div>
                    <div class="col-lg-4">
                        <label>Upload Cover Photo URL</label>
                        <input type='text' name="file" class="form-control" value="<%= doc.file%>" required>
                    </div>
                    <div class="col-lg-12">
                        <label for="">Description</label>
                        <textarea class="form-control" name="textarea" rows="3" cols="200" value="<%= doc.description%>"
                            required></textarea>
                    </div>
                    <div class="col-lg-12 mx-auto">
                        <label for=""></label>
                        <% if( !doc.name){%>
                        <button type="submit" name="submit" class="btn-primary form-control">Create Course </button>
                        <%}else {%>
                        <button type="submit" name="submit" class="btn-primary form-control">Update Course </button>
                        <%}%>  
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include ('./footer')%>